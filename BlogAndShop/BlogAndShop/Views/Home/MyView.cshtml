@{
	var text = ViewBag.PageText;
	var title = ViewBag.PageTitle;
}

<section>

	<div class="container min-h-50vh pt-5">

		<div class="row text-center-xs d-middle">

			<div class="col-12 col-md-6 order-2 order-md-1 pb-5 aos-init aos-animate" data-aos="fade-up" data-aos-delay="0">

				<div class="mb-5">

					<h1 class="h2-xs font-weight-light mb-0">
						@title
					</h1>

					<p class="lead">
						@text
					</p>

				</div>

			</div>

			<div class="col-12 col-md-6 order-1 order-md-2 pb-5 aos-init aos-animate" data-aos="fade-up" data-aos-delay="200">

				<!-- svg image -->
				<img width="600" height="400" class="img-fluid" src="~/lib/Smarty/demo.files/svg/premium/production.svg" alt="...">

			</div>

		</div>


	</div>

</section>
