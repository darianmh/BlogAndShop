@using BlogAndShop.Services
@model BlogAndShop.Data.ViewModel.Product.DownloadItemViewModel

@{
	Layout = "_AdminLayout";
}

<!-- counter:start: -->
<div class="row gutters-sm">

	<!-- start:col: -->
	<div class="col-12 col-xl-12 mb-3">

		<!-- start:portlet -->
		<div class="portlet">

			<div class="portlet-header border-bottom">
				<span>جزییات</span>
			</div>

			<div class="portlet-body">
				<div class="container py-6">
					<form>
						@await Component.InvokeAsync("DetailsTemplate", new { Model, Html.ViewContext.HttpContext })
						<div class="mt--10">
							<a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">ویرایش</a>
							<a asp-action="Index" class="btn btn-dark">لیست</a>
							<a href="@Model.DownloadPath" class="btn btn-info" target="_blank">دانلود فایل</a>
						</div>
					</form>


				</div>
			</div>

		</div>
		<!-- end:portlet -->

	</div>
	<!-- end:col: -->

</div>
<!-- end:row: -->